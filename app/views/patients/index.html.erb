<h2>All registered patients</h2>
<br />
<div class="row">
  <div class="col-md-12"> 
    <p>
      <%= link_to 'Add Patient Profile', new_patient_path, class: "btn btn-gold" %>
    </p>
    <div class="table-responsive">
      <table class="table table-hover table-striped table-responsive-md btn-table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.name %></td>
              <td><%= link_to 'Show', patient_path(patient), class: "btn btn-blue btn-sm m-0" %></td>
              <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-blue btn-sm m-0" %></td>
              <td><%= link_to 'Destroy', patient_path(patient),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-blue btn-sm m-0" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>